# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/banking_system
# For production, use your MongoDB Atlas or other cloud database
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/banking_system

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,http://localhost:3000

# Optional: External Services
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Banking Environment
BANKING_ENV=test  # test or production

# Real Banking Network APIs - Production
SHETAB_CERT_PATH=/path/to/shetab/certificate.pem
SHETAB_PRIVATE_KEY_PATH=/path/to/shetab/private_key.pem
SHETAB_MERCHANT_ID=your_shetab_merchant_id
SHETAB_TERMINAL_ID=your_shetab_terminal_id
SHETAB_ACQUIRER_ID=your_shetab_acquirer_id
SHETAB_BRANCH_CODE=001
SHETAB_TELLER_ID=001

NATIONAL_CERT_PATH=/path/to/national/certificate.pem
NATIONAL_PRIVATE_KEY_PATH=/path/to/national/private_key.pem
NATIONAL_BRANCH_CODE=001
NATIONAL_TELLER_ID=001

CENTRAL_CERT_PATH=/path/to/central/certificate.pem
CENTRAL_PRIVATE_KEY_PATH=/path/to/central/private_key.pem
CENTRAL_ORG_CODE=your_organization_code

# Real Banking Network APIs - Test Environment
SHETAB_TEST_CERT_PATH=/path/to/shetab/test_certificate.pem
SHETAB_TEST_PRIVATE_KEY_PATH=/path/to/shetab/test_private_key.pem
SHETAB_TEST_MERCHANT_ID=your_test_shetab_merchant_id
SHETAB_TEST_TERMINAL_ID=your_test_shetab_terminal_id
SHETAB_TEST_ACQUIRER_ID=your_test_shetab_acquirer_id
SHETAB_TEST_BRANCH_CODE=001
SHETAB_TEST_TELLER_ID=001

NATIONAL_TEST_CERT_PATH=/path/to/national/test_certificate.pem
NATIONAL_TEST_PRIVATE_KEY_PATH=/path/to/national/test_private_key.pem
NATIONAL_TEST_BRANCH_CODE=001
NATIONAL_TEST_TELLER_ID=001

CENTRAL_TEST_CERT_PATH=/path/to/central/test_certificate.pem
CENTRAL_TEST_PRIVATE_KEY_PATH=/path/to/central/test_private_key.pem
CENTRAL_TEST_ORG_CODE=your_test_organization_code

# Government Identity Verification APIs
CIVIL_REGISTRY_HOST=api.sabt.gov.ir
CIVIL_REGISTRY_API_KEY=your_civil_registry_api_key

TAX_ORG_HOST=api.intamedia.ir
TAX_ORG_API_KEY=your_tax_organization_api_key

CUSTOMER_DB_HOST=api.cbi.ir
CUSTOMER_DB_API_KEY=your_customer_database_api_key